CREATE TABLE item (
id int auto_increment primary key,
name varchar(100),
sales int
);

INSERT INTO item(name, sales)
SELECT
  CONCAT(CHAR(rand()*26 + 65), CHAR(rand()*26 + 97)) as name,
  ROUND(rand()*200, 2) as sales
FROM information_schema.columns limit 1000;

SELECT 
  name,
  sales,
  LEAD(sales, 1) OVER (ORDER BY sales DESC) AS higher,
  NTILE(4) OVER (ORDER BY sales DESC) AS quartile
FROM item;